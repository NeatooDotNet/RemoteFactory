@using global::HorseFarm.DomainModel.Horse
@inject NavigationManager Navigation

@if (Horse != null)
{
    <div class="card" draggable="true" @ondragstart="@(() => @HorseDragDrop.Horse = @Horse)">
        <div class="card-header">
            @Horse.Name
        </div>
        <div class="card-body">
            <div>Birth Date: @Horse.BirthDate.ToShortDateString()</div>
            <div>Breed: @Horse.Breed</div>
        </div>
    </div>
}
else
{
    <p>Loading...</p>
}

@code {
    [Parameter]
    public IHorse Horse { get; set; } = default!;

    [Parameter]
    public HorseDragDrop HorseDragDrop { get; set; } = default!;


}